<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VitaMove" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorSecondary">@color/accent_color</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="android:windowBackground">@color/background_color</item>
        
        <!-- Стили для стандартных компонентов -->
        <item name="materialButtonStyle">@style/Widget.VitaMove.Button</item>
        <item name="chipStyle">@style/Widget.VitaMove.Chip.Filter</item>
        <item name="textInputStyle">@style/Widget.VitaMove.TextInputLayout</item>
        
        <!-- Переопределение стилей диалогов -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        
        <!-- Дополнительные атрибуты для темной темы -->
        <item name="dividerColor">@color/divider_color</item>
        <item name="colorPrimaryContainer">#1F2E2E2E</item>
    </style>

    <!-- Базовая тема приложения с объединенными атрибутами -->
    <style name="Theme.VitaMove" parent="Base.Theme.VitaMove">
        <!-- Шрифты -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        
        <!-- Статус бар и навигационная панель -->
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        
        <!-- Material Design 2.0 атрибуты -->
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Цвета фона -->
        <item name="colorSurface">#252525</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Цвета текста -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        
        <!-- Обводка для input полей -->
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
</resources>