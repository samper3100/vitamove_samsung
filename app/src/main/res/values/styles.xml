<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.VitaMove.NoActionBar" parent="Theme.VitaMove">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <!-- Пользовательский стиль для фильтрующих чипов -->
    <style name="Widget.VitaMove.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textSize">14sp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/accent_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="checkedIconEnabled">false</item>
    </style>

    <!-- Стиль для текста выбранного чипа удалён, так как атрибут checkedTextAppearance не поддерживается -->

    <!-- Стиль для заголовка тулбара -->
    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="MealCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#E0E0E0</item>
    </style>

    <style name="MealCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MealTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#030303</item>
    </style>

    <style name="MealSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="AddFoodButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">ДОБАВИТЬ ЕДУ</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="RoundButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fabSize">mini</item>
        <item name="backgroundTint">@color/accent_color</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="WeekDayStyle">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#757575</item>
        <item name="android:background">@drawable/day_circle_background</item>
    </style>

    <style name="InactiveInputField">
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
        <item name="android:enabled">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Стили для календаря -->
    <style name="CalendarHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="CalendarDateText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CalendarWeekText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Стиль для стандартной кнопки в приложении -->
    <style name="Widget.VitaMove.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/accent_color</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Стиль для кнопки с контуром -->
    <style name="Widget.VitaMove.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/accent_color</item>
        <item name="strokeColor">@color/accent_color</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Стиль для кнопки "Начать" на экране онбординга -->
    <style name="Widget.VitaMove.Button.Onboarding">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/orange_500</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="iconTint">@android:color/white</item>
        <item name="icon">@drawable/ic_arrow_right</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">12dp</item>
        <item name="iconSize">24dp</item>
    </style>

    <!-- Стиль для TextInputLayout с корректной обводкой -->
    <style name="Widget.VitaMove.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/text_input_hint_color</item>
        <item name="android:textColorHint">@color/text_input_hint_color</item>
        <item name="endIconTint">@color/orange_500</item>
        <item name="startIconTint">@color/orange_500</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
    </style>

    <!-- Стиль для диалога деталей упражнения -->
    <style name="ThemeOverlay.MaterialComponents.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="windowMinWidthMajor">@dimen/abc_dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@dimen/abc_dialog_min_width_minor</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Стиль для диалога с деталями упражнения -->
    <style name="ExerciseDetailsDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/ExerciseDialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/ExerciseDialogBodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ExerciseDialogButtonStyle</item>
    </style>
    
    <!-- Стиль для заголовка диалога с деталями упражнения -->
    <style name="ExerciseDialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Стиль для текста диалога с деталями упражнения -->
    <style name="ExerciseDialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <!-- Стиль для кнопки диалога с деталями упражнения -->
    <style name="ExerciseDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Стиль для ползунка в виде линейки -->
    <style name="RulerSeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/custom_seekbar</item>
        <item name="android:thumbTint">@color/orange_500</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <!-- Стиль для текста в TabLayout -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Стиль для основной кнопки активной программы -->
    <style name="Widget.VitaMove.Button.ActiveProgram" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">2dp</item>
        <item name="backgroundTint">@color/accent_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/white</item>
    </style>
    
    <!-- Стиль для второстепенной кнопки активной программы -->
    <style name="Widget.VitaMove.Button.OutlinedActiveProgram" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/accent_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">4dp</item>
        <item name="iconTint">@color/accent_color</item>
    </style>

    <!-- Стиль для кнопок на экранах опроса -->
    <style name="Widget.VitaMove.Button.Survey">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/orange_500</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

    <!-- Стиль для кнопки регистрации -->
    <style name="Widget.VitaMove.Button.Register">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/orange_500</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">4dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    
    <!-- Стиль для кнопки Google при регистрации -->
    <style name="Widget.VitaMove.Button.GoogleRegister">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?android:attr/colorBackground</item>
        <item name="cornerRadius">16dp</item>
        <item name="elevation">4dp</item>
        <item name="icon">@drawable/ic_google_logo</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@null</item>
        <item name="strokeColor">?android:attr/textColorSecondary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Стиль для кнопки входа -->
    <style name="Widget.VitaMove.Button.Login">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/orange_500</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">4dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- Стиль для карточки статистики -->
    <style name="Widget.VitaMove.Card.Stats" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    
    <!-- Стиль для заголовка в карточке статистики -->
    <style name="TextAppearance.VitaMove.Card.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Стиль для цифр статистики -->
    <style name="TextAppearance.VitaMove.Stats.Value" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Стиль для подписей статистики -->
    <style name="TextAppearance.VitaMove.Stats.Label" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    
    <!-- Стиль для элемента последней тренировки -->
    <style name="Widget.VitaMove.Card.Workout" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="rippleColor">@color/orange_200</item>
    </style>
    
    <!-- Стиль для заголовка на странице -->
    <style name="TextAppearance.VitaMove.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/section_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Стиль для TextInputLayout с выпадающим списком -->
    <style name="Widget.VitaMove.TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/text_input_hint_color</item>
        <item name="android:textColorHint">@color/text_input_hint_color</item>
        <item name="endIconTint">@color/accent_color</item>
        <item name="startIconTint">@color/accent_color</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxBackgroundMode">outline</item>
    </style>

    <!-- Стиль для SearchView в темной и светлой теме -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
        <item name="android:queryBackground">@null</item>
        <item name="queryBackground">@null</item>
    </style>

    <!-- Стиль для маскировки водяного знака -->
    <style name="WatermarkHider" parent="">
        <item name="android:windowBackground">@drawable/watermark_hider_background</item>
    </style>
    
    <!-- Тема для активностей с водяным знаком -->
    <style name="Theme.VitaMove.NoActionBar.WatermarkHider" parent="Theme.VitaMove.NoActionBar">
        <item name="android:windowBackground">@drawable/watermark_hider_background</item>
    </style>

    <!-- Стиль для круглых чипов дней недели -->
    <style name="CircularChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAlignment">center</item>
        <item name="chipIconVisible">false</item>
        <item name="chipStartPadding">0dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CircularChip</item>
    </style>
    
    <style name="ShapeAppearanceOverlay.CircularChip" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Стиль для BottomSheet диалога выбора нутриентов -->
    <style name="CustomBottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Стиль для календаря -->
    <style name="CustomDatePickerStyle" parent="ThemeOverlay.MaterialComponents.Dialog">

        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:datePickerStyle">@style/CustomDatePicker</item>
    </style>
    
    <style name="CustomDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:dayOfWeekBackground">@android:color/transparent</item>
        <item name="android:dayOfWeekTextAppearance">@style/TextAppearance.VitaMove.DatePicker.DayOfWeek</item>
    </style>
    
    <style name="TextAppearance.VitaMove.DatePicker.DayOfWeek" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources> 