<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ваш уровень физической активности"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите уровень вашей обычной физической активности в течение недели"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/rgFitnessLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Скрытые RadioButton для логики выбора -->
        <RadioButton
            android:id="@+id/rbBeginner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/rbIntermediate"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/rbAdvanced"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
    </RadioGroup>

    <!-- Малоактивный -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBeginner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/card_stroke_color"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        app:checkedIcon="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Малоактивный (сидячая работа, минимум физической активности)"
                android:textSize="16sp"
                android:textColor="@color/black" />
                
            <ImageView
                android:id="@+id/ivBeginnerSelected"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle_orange"
                android:visibility="gone"
                android:contentDescription="Выбрано" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Умеренно активный -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardIntermediate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/card_stroke_color"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        app:checkedIcon="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Умеренно активный (сидячая работа + 1-3 тренировки в неделю)"
                android:textSize="16sp"
                android:textColor="@color/black" />
                
            <ImageView
                android:id="@+id/ivIntermediateSelected"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle_orange"
                android:visibility="gone"
                android:contentDescription="Выбрано" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Активный -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAdvanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/card_stroke_color"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        app:checkedIcon="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Активный (активная работа или 4-6 тренировок в неделю)"
                android:textSize="16sp"
                android:textColor="@color/black" />
                
            <ImageView
                android:id="@+id/ivAdvancedSelected"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle_orange"
                android:visibility="gone"
                android:contentDescription="Выбрано" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ваш уровень активности важен для правильного расчета суточной нормы калорий."
        android:textSize="14sp"
        android:textColor="@color/gray_600"
        android:layout_marginTop="16dp" />

</LinearLayout> 