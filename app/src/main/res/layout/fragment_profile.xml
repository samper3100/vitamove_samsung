<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- Верхний градиент для создания эффекта глубины -->
    <View
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/profile_gradient_background"/>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Профиль"
            android:elevation="0dp"
            app:titleTextColor="@android:color/white"
            app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6">

            <com.google.android.material.button.MaterialButton
                android:contentDescription="настройки"
                android:id="@+id/settingsButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                app:icon="@drawable/ic_settings"
                app:iconTint="@android:color/white"
                app:iconSize="24dp"
                app:cornerRadius="24dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                app:rippleColor="#80FFFFFF"
                style="@style/Widget.Material3.Button.IconButton"/>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

        <!-- Профиль пользователя - полностью переработанный дизайн -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp">

                <View
                    android:id="@+id/profileBackground"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/profile_card_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/statsCardView"
                    app:layout_constraintHeight_min="200dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_profile"
                    android:layout_marginTop="24dp"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#FFA000"
                    app:civ_circle_background_color="@color/profile_img"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сергей"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/profile_text_primary"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintTop_toBottomOf="@id/profileImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/userInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Мужчина, 17 лет"
                    android:textColor="@color/profile_text_secondary"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/userName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Карточка со статистикой веса в современном дизайне -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/statsCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_constraintTop_toBottomOf="@id/userInfo"
                    app:cardBackgroundColor="@color/profile_stats_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Текущий вес -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Текущий вес"
                                android:textColor="@color/profile_text_secondary"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/currentWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="75.0 кг"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- Разделитель с градиентом -->
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/vertical_gradient_divider"/>

                        <!-- Желаемый вес -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Желаемый вес"
                                android:textColor="@color/profile_text_secondary"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/targetWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80.0 кг"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Питание и энергия - современный дизайн -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/profile_stats_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Питание и энергия"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_text_primary"
                        android:layout_marginBottom="20dp"/>

                    <!-- Плитки с показателями питания -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Вода (Перемещена вместо BMR) -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/profile_card_background">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/waterIntakeValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2.0 л"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#2196F3"
                                    android:layout_marginBottom="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Цель потребления воды"
                                    android:textSize="12sp"
                                    android:textColor="@color/profile_text_secondary"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Дневные калории -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/profile_card_background">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/dailyCaloriesValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1980 ккал"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#4CAF50"
                                    android:layout_marginBottom="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Дневная норма калорий"
                                    android:textSize="12sp"
                                    android:textColor="@color/profile_text_secondary"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Индекс массы тела (ИМТ) - полностью обновленный дизайн -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/profile_stats_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ИМТ и здоровье"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/profile_text_primary"/>
                            
                        <TextView
                            android:id="@+id/bmiValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22.4"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <!-- Современный дизайн шкалы ИМТ -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <!-- Градиентная шкала ИМТ -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp">
                            
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#4CAF50"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#8BC34A"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#FFEB3B"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#FF9800"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#F44336"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Анимированный маркер с тенью -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/bmiMarkerCard"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="0dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#FFFFFF">
                            
                            <ImageView
                                android:id="@+id/bmiMarker"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="center"
                                android:visibility="visible"/>
                                
                        </com.google.android.material.card.MaterialCardView>
                    </FrameLayout>

                    <!-- Цветные категории ИМТ с современным дизайном -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Недовес"
                            android:textSize="11sp"
                            android:textColor="#4CAF50"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Норма"
                            android:textSize="11sp"
                            android:textColor="#8BC34A"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Избыток"
                            android:textSize="11sp"
                            android:textColor="#FFEB3B"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ожирение"
                            android:textSize="11sp"
                            android:textColor="#FF9800"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Сильное"
                            android:textSize="11sp"
                            android:textColor="#F44336"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Большая карточка с описанием состояния пользователя -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/profile_card_background">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_info"
                                android:layout_marginEnd="12dp"
                                app:tint="#4CAF50" />

                            <TextView
                                android:id="@+id/bmiDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="У вас нормальный вес. Продолжайте поддерживать здоровый образ жизни."
                                android:textColor="@color/profile_text_primary"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Физические параметры - модернизированный дизайн -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/profile_stats_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Физические параметры"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_text_primary"
                        android:layout_marginBottom="20dp"/>

                    <!-- Современный дизайн параметров -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">
                        
                        <!-- Рост - карточка -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/profile_card_background">
                            
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="16dp">
                                
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_height"
                                    android:layout_marginBottom="8dp"
                                    app:tint="#FFA000" />
                                    
                                <TextView
                                    android:id="@+id/heightValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="183 см"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/profile_card_text"
                                    android:layout_marginBottom="4dp"/>
                                    
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Рост"
                                    android:textSize="12sp"
                                    android:textColor="@color/profile_text_secondary"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        
                        <!-- % жира - карточка -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/profile_card_background">
                            
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="16dp">
                                
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_fat"
                                    android:layout_marginBottom="8dp"
                                    app:tint="#FF5252" />
                                    
                                <TextView
                                    android:id="@+id/bodyFatValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.0%"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/profile_card_text"
                                    android:layout_marginBottom="4dp"/>
                                    
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="% жира"
                                    android:textSize="12sp"
                                    android:textColor="@color/profile_text_secondary"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                    
                    <!-- Обхват талии - в виде отдельной карточки -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/profile_card_background">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">
                            
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_waist"
                                android:layout_marginEnd="16dp"
                                app:tint="#2196F3" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Обхват талии"
                                    android:textSize="14sp"
                                    android:textColor="@color/profile_text_secondary"/>
                                    
                                <TextView
                                    android:id="@+id/waistValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 см"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/profile_card_text"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Достижения - полностью обновленный дизайн -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/achievements_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/profile_stats_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Достижения и рекорды"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_text_primary"
                        android:layout_marginBottom="16dp"/>

                    <!-- Контейнер для карточек достижений -->
                    <LinearLayout
                        android:id="@+id/achievements_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        
                        <!-- Карточка достижения 1 - современный дизайн -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/profile_card_background"
                            android:layout_marginBottom="16dp">
                            
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp">
                            
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    app:cardCornerRadius="25dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="#3D5AFE"
                                    android:layout_marginEnd="16dp">
                                    
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_achievement_workout"
                                        android:padding="12dp"
                                        app:tint="@android:color/white" />
                                </com.google.android.material.card.MaterialCardView>
                                
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Регулярные тренировки"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:textColor="@color/profile_card_text"
                                        android:layout_marginBottom="4dp"/>
                                    
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Выполните 20 тренировок"
                                        android:textColor="#BDBDBD"
                                        android:layout_marginBottom="8dp"/>
                                    
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">
                                        
                                        <com.google.android.material.progressindicator.LinearProgressIndicator
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:progress="65"
                                            app:trackThickness="6dp"
                                            app:trackCornerRadius="3dp"
                                            app:indicatorColor="#3D5AFE"
                                            app:trackColor="#424242"/>
                                        
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="13/20"
                                            android:textColor="@color/profile_text_secondary"
                                            android:textStyle="bold"
                                            android:layout_marginStart="8dp"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Карточка достижения 2 - современный дизайн -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
