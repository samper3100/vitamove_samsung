<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_dialog_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/program_config_title"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/program_config_days"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/secondary_text"
        android:layout_marginBottom="16dp"/>

    <!-- Дни недели -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <CheckBox
            android:id="@+id/checkbox_monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/program_config_monday"
            android:textColor="@color/primary_text"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/program_config_tuesday"
            android:textColor="@color/primary_text"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/program_config_wednesday"
            android:textColor="@color/primary_text"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/program_config_thursday"
            android:textColor="@color/primary_text"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/program_config_friday"
            android:textColor="@color/primary_text"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_saturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/program_config_saturday"
            android:textColor="@color/primary_text"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_sunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/program_config_sunday"
            android:textColor="@color/primary_text"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Кнопки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/program_config_cancel"
            android:textColor="@color/accent_color"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/program_config_save"
            app:backgroundTint="@color/accent_color"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"/>
    </LinearLayout>
</LinearLayout> 